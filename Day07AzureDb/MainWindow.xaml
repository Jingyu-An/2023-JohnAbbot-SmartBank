<Window x:Class="Day07AzureDb.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Day07AzureDb"
        mc:Ignorable="d"
        Title="Smart Banking" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Mene">
                <MenuItem Header="_Todo..."/>
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Text="Status Bar" Name="LblStatus" />
            </StatusBarItem>
        </StatusBar>
        <StackPanel Orientation="Vertical" VerticalAlignment="Top">
            <Button Content="Page1" MinHeight="40" MinWidth="50" Click="Button_Click">
            </Button>
            <Button Content="Page2" MinHeight="40" MinWidth="50" Click="Button_Click_1">
            </Button>
            <Button Content="Page3" MinHeight="40" MinWidth="50" Click="Button_Click_2">
            </Button>
        </StackPanel>
        <Border BorderBrush="Gray" BorderThickness="1">
            <Frame x:Name="Main">
            
            </Frame>
        </Border>
    </DockPanel>
</Window>
